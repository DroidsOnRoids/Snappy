platform :ios, '9.0'
use_frameworks!

def libraries
   	pod 'AlamofireImage', :git => 'https://github.com/Alamofire/AlamofireImage'
    pod 'OHHTTPStubs'
    pod 'OHHTTPStubs/Swift'
end

target 'Snappy' do
    libraries
end

target 'SnappyAPITests' do
    libraries
end

target 'SnappyUITests' do
    libraries
end

